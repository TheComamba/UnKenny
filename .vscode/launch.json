{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test",
                "--timeout=2000",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run remote model tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "env": {
                "RUN_REMOTE_TESTS": "true",
                "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
                "GOOGLE_API_KEY": "${env:GOOGLE_API_KEY}"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run local model tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "env": {
                "RUN_LOCAL_TESTS": "true"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run all tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "env": {
                "RUN_REMOTE_TESTS": "true",
                "RUN_LOCAL_TESTS": "true",
                "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
                "GOOGLE_API_KEY": "${env:GOOGLE_API_KEY}"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}