{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to process",
            "processId": "${command:PickProcess}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch tests via npm",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test",
                "--timeout=2000",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Include slow tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "env": {
                "RUN_SLOW_TESTS": "true"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Include OpenAI tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "env": {
                "RUN_OPENAI_TESTS": "true",
                "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Include all tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "env": {
                "RUN_SLOW_TESTS": "true",
                "RUN_OPENAI_TESTS": "true",
                "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}