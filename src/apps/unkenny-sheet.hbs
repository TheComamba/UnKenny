<form class="flexcol" autocomplete="off">
    <section>
        <header class="flex-header">
            <h1>
                {{localize "unkenny.sheet.title"}}
            </h1>
        </header>
    </section>
    <section>
        <div class='form-field'>
            <label>{{localize "unkenny.sheet.alias"}}</label>
            <input name="alias" type="text" value="{{alias}}" pattern="\w+">
        </div>

        <div class='form-field'>
            <label>{{localize "unkenny.sheet.preamble"}}</label>
            <textarea name="preamble" rows="15">{{preamble}}</textarea>
        </div>

        <div class='form-field'>
            <label>{{localize "unkenny.sheet.includeBiography"}}</label>
            <input name="includeBiography" type="checkbox" {{#if includeBiography}}checked{{/if}}>
        </div>

        <header class="flex-header">
            <h3>
                {{localize "unkenny.sheet.overwrite"}}
            </h3>
        </header>

        <div class='form-field'>
            <label>{{localize "unkenny.settings.model"}}</label>
            <select name='model' class='form-control'>
                {{#each models}}
                <option value="{{this.model}}" {{#isSelected}}selected="selected" {{/isSelected}}>{{this.text}}</option>
                {{/each}}
            </select>
        </div>

        <div class='form-field'>
            <label>{{localize "unkenny.settings.minNewTokens"}}</label>
            <input name="minNewTokens" type="number" value="{{minNewTokens}}" step="1">
        </div>

        <div class='form-field'>
            <label>{{localize "unkenny.settings.maxNewTokens"}}</label>
            <input name="maxNewTokens" type="number" value="{{maxNewTokens}}" step="1">
        </div>

        <div class='form-field'>
            <label>{{localize "unkenny.settings.repetitionPenalty"}}</label>
            <input name="repetitionPenalty" type="number" step="0.01" value="{{repetitionPenalty}}">
        </div>

        <div class='form-field'>
            <label>{{localize "unkenny.settings.temperature"}}</label>
            <input name="temperature" type="number" step="0.01" value="{{temperature}}">
        </div>

        <div class='form-field'>
            <label>{{localize "unkenny.settings.prefix"}}</label>
            <select name='prefix' class='form-control'>
                {{#each prefixes}}
                <option value="{{this.key}}" {{#isSelected}}selected="selected" {{/isSelected}}>{{this.text}}</option>
                {{/each}}
            </select>
        </div>

        <button type="submit">
            <i class="fa fa-check"></i>
            {{localize "unkenny.sheet.save"}}
        </button>
    </section>
</form>
