<form class="flexcol" autocomplete="off">
    <section>
        <header class="flex-header">
            <h1>
                Edit UnKennyness Parameters
            </h1>
        </header>
    </section>
    <section>
        <div class='form-field'>
            <label>{{localize "unkenny-sheet.alias"}}</label>
            <input name="alias" type="text" value="{{alias}}" pattern="\w+">
        </div>

        <div class='form-field'>
            <label>Preamble</label>
            <textarea name="preamble" rows="15">{{preamble}}</textarea>
        </div>

        <header class="flex-header">
            <h3>
                Overwrite Global Parameters
            </h3>
        </header>

        <div class='form-field'>
            <label>Model</label>
            <select name='model' class='form-control'>
                {{#each models}}
                <option value="{{this.model}}" {{#isSelected}}selected="selected" {{/isSelected}}>{{this.text}}</option>
                {{/each}}
            </select>
        </div>

        <div class='form-field'>
            <label>Minimum number of generated tokens</label>
            <input name="minNewTokens" type="number" value="{{minNewTokens}}" step="1">
        </div>

        <div class='form-field'>
            <label>Maximum number of generated tokens</label>
            <input name="maxNewTokens" type="number" value="{{maxNewTokens}}" step="1">
        </div>

        <div class='form-field'>
            <label>Repetition penalty</label>
            <input name="repetitionPenalty" type="number" step="0.01" value="{{repetitionPenalty}}">
        </div>

        <div class='form-field'>
            <label>Temperature</label>
            <input name="temperature" type="number" step="0.01" value="{{temperature}}">
        </div>

        <button type="submit">
            <i class="fa fa-check"></i>
            Save
        </button>
    </section>
</form>